<MainWindow>:
    do_default_tab: False
    tab_width: 150

<ManageScripts>:
    text: 'Manage your Scripts'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()

        BoxLayout:
            TextInput:
                id: text_input
                text: ''

            RstDocument:
                text: text_input.text
                show_errors: True

<ScriptPage>:
    text: self.script_name
    BoxLayout:
        size_hint: (0.5, 0.2)
        Label:
            text: root.status
        Button:
            pos: 1, 1
            text: "run " + root.script_name
            on_press: root.run_script()
        TextInput:
            multiline: True
            readonly: True
            text: '\n'.join(root.output)

<StringInput>:
    size_hint: (0.5, 0.2)
    Label:
        text: root.input_name
    TextInput:
        text: root.input_value

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.dismiss()

            Button:
                text: "Load"
                on_release: app.window.add_script(filechooser.path, filechooser.selection, action=root.dismiss)
