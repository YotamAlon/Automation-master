<MainWindow>:
    do_default_tab: False

<ScriptPage>:
    text: self.script_name
    BoxLayout:
        size_hint: (0.5, 0.2)
        Label:
            text: root.status
        Button:
            pos: 1, 1
            text: "run " + root.script_name
            on_press: root.run_script()
        TextInput:
            multiline: True
            text: '\n'.join(root.output)

<StringInput>:
    Label:
        size_hint_y: .2
        text: self.input_name
        font_size: self.height -10
    Label:
        size_hint_y: .1
        text: self.input_help
        font_size: self.height -10
    TextInput:
        on_text_change: self.input_value = self.text #need to change function name

<FileInput>:
    Label:
        size_hint_y: .2
        text: self.input_name
        font_size: self.height -10
    Label:
        size_hint_y: .1
        text: self.input_help
        font_size: self.height -10
    Button:
        text: 'Choose File'
        on_press: root.open_popup()
