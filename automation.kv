<MainWindow>:
    do_default_tab: False
    tab_width: 150

<ManageScripts>:
    text: 'Manage your Scripts'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()

        BoxLayout:
            TextInput:
                id: text_input
                text: ''

            RstDocument:
                text: text_input.text
                show_errors: True

<ScriptPage>:
    text: self.script_name
    BoxLayout:
        size_hint: (0.5, 0.2)
        Label:
            text: root.status
        Button:
            pos: 1, 1
            text: "run " + root.script_name
            on_press: root.run_script()
        TextInput:
            multiline: True
            text: '\n'.join(root.output)

<StringInput>:
    Label:
        size_hint_y: .2
        text: self.input_name
        font_size: self.height -10
    Label:
        size_hint_y: .1
        text: self.input_help
        font_size: self.height -10
    TextInput:
        on_text_change: self.input_value = self.text #need to change function name

<FileInput>:
    Label:
        size_hint_y: .2
        text: self.input_name
        font_size: self.height -10
    Label:
        size_hint_y: .1
        text: self.input_help
        font_size: self.height -10
    Button:
        text: 'Choose File'
        on_press: root.open_popup()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
